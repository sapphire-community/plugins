{
	"name": "root-plugins",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"clean": "rimraf \"packages/**/dist\" \"packages/**/.turbo\"",
		"lint": "turbo run lint",
		"format": "prettier --write \"packages/**/{src,tests,scripts}/**/*.{mjs,ts,js}\"",
		"test": "turbo run test",
		"build": "turbo run build",
		"docs": "typedoc",
		"commit": "git-cz",
		"cz": "git-cz",
		"update": "yarn upgrade-interactive",
		"prepare": "husky install .github/husky"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.2.1",
		"@commitlint/config-conventional": "^16.2.1",
		"@favware/npm-deprecate": "^1.0.4",
		"@sapphire/eslint-config": "^4.2.0",
		"@sapphire/framework": "^2.4.0",
		"@sapphire/pieces": "^3.2.0",
		"@sapphire/prettier-config": "^1.3.0",
		"@sapphire/stopwatch": "^1.3.0",
		"@sapphire/ts-config": "^3.3.1",
		"@sapphire/utilities": "^3.3.0",
		"@types/jest": "^27.4.0",
		"@types/node": "^17.0.15",
		"@types/node-fetch": "^2.6.1",
		"@types/ws": "^8.2.3",
		"@typescript-eslint/eslint-plugin": "^5.12.0",
		"@typescript-eslint/parser": "^5.12.0",
		"cz-conventional-changelog": "^3.3.0",
		"discord-api-types": "^0.27.2",
		"discord.js": "^13.6.0",
		"eslint": "^8.9.0",
		"eslint-config-prettier": "^8.4.0",
		"eslint-plugin-prettier": "^4.0.0",
		"gen-esm-wrapper": "^1.1.3",
		"husky": "^7.0.4",
		"jest": "^27.5.1",
		"jest-circus": "^27.5.1",
		"lerna": "^4.0.0",
		"lint-staged": "^12.3.4",
		"prettier": "^2.5.1",
		"pretty-quick": "^3.1.3",
		"rimraf": "^3.0.2",
		"ts-jest": "^27.1.3",
		"ts-node": "^10.5.0",
		"turbo": "^1.1.3",
		"typedoc": "^0.22.11",
		"typedoc-plugin-djs-links": "^1.0.4",
		"typedoc-plugin-mdn-links": "^1.0.5",
		"typescript": "^4.5.5"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sapphiredev/plugins.git"
	},
	"engines": {
		"node": ">=v14.0.0",
		"npm": ">=7.0.0"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"resolutions": {
		"acorn": "^8.7.0",
		"jest-environment-jsdom": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.1.3.tgz",
		"jest-jasmine2": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.1.3.tgz"
	},
	"prettier": "@sapphire/prettier-config",
	"packageManager": "yarn@3.1.1"
}
