{
	"name": "root",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"clean": "rimraf packages/**/dist",
		"lint": "eslint packages --ext mjs,js,ts --fix",
		"format": "prettier --write packages/**/{src,tests,scripts}/**/*.{mjs,ts,js}",
		"test": "jest",
		"test:watch": "jest --watch",
		"build": "lerna run build --parallel",
		"docs": "typedoc",
		"commit": "git-cz",
		"cz": "git-cz",
		"update": "yarn upgrade-interactive --latest",
		"prepare": "husky install .github/husky"
	},
	"devDependencies": {
		"@commitlint/cli": "^12.0.1",
		"@commitlint/config-conventional": "^12.0.1",
		"@mdx-js/mdx": "^1.6.22",
		"@sapphire/eslint-config": "^3.0.2",
		"@sapphire/framework": "^1.0.0",
		"@sapphire/pieces": "^1.2.3",
		"@sapphire/prettier-config": "^1.0.8",
		"@sapphire/ts-config": "^2.1.0",
		"@sapphire/utilities": "^1.4.6",
		"@types/jest": "^26.0.21",
		"@types/node": "^14.14.35",
		"@types/node-fetch": "^2.5.8",
		"@types/ws": "^7.4.0",
		"@typescript-eslint/eslint-plugin": "^4.18.0",
		"@typescript-eslint/parser": "^4.18.0",
		"cz-conventional-changelog": "^3.3.0",
		"discord-api-types": "^0.12.1",
		"discord.js": "^12.5.1",
		"eslint": "^7.22.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"gen-esm-wrapper": "^1.1.1",
		"husky": "^5.1.3",
		"jest": "^26.6.3",
		"jest-circus": "^26.6.3",
		"lerna": "^4.0.0",
		"lint-staged": "^10.5.4",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.2.1",
		"pretty-quick": "^3.1.0",
		"ts-jest": "^26.5.4",
		"ts-node": "^9.1.1",
		"typedoc": "0.19.2",
		"typedoc-plugin-lerna-packages": "^0.3.1",
		"typedoc-plugin-nojekyll": "^1.0.1",
		"typescript": "^4.2.3"
	},
	"peerDependencies": {},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sapphire-project/plugins.git"
	},
	"engines": {
		"node": ">=12"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"resolutions": {
		"acorn": "^8.1.0",
		"minimist": "^1.2.5",
		"kind-of": "^6.0.3",
		"jest-environment-jsdom": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.1.1.tgz",
		"jest-jasmine2": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.1.1.tgz",
		"dot-prop": "^6.0.1",
		"marked": "^2.0.1"
	},
	"prettier": "@sapphire/prettier-config"
}
