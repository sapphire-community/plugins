{
	"name": "root",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"clean": "rimraf packages/**/dist",
		"lint": "eslint packages --ext mjs,js,ts --fix",
		"format": "prettier --write packages/**/{src,tests,scripts}/**/*.{mjs,ts,js}",
		"test": "jest",
		"test:watch": "jest --watch",
		"build": "lerna run build --parallel",
		"docs": "typedoc",
		"commit": "git-cz",
		"cz": "git-cz",
		"update": "yarn upgrade-interactive --latest"
	},
	"devDependencies": {
		"@commitlint/cli": "^11.0.0",
		"@commitlint/config-conventional": "^11.0.0",
		"@sapphire/eslint-config": "^2.1.0",
		"@sapphire/framework": "1.0.0-alpha.3",
		"@sapphire/pieces": "^1.1.0",
		"@sapphire/prettier-config": "^1.0.6",
		"@sapphire/ts-config": "^2.0.0",
		"@sapphire/utilities": "^1.4.3",
		"@types/jest": "^26.0.20",
		"@types/node": "^14.14.21",
		"@types/node-fetch": "^2.5.8",
		"@types/ws": "^7.4.0",
		"@typescript-eslint/eslint-plugin": "^4.14.0",
		"@typescript-eslint/parser": "^4.14.0",
		"cz-conventional-changelog": "^3.3.0",
		"discord-api-types": "^0.12.1",
		"discord.js": "^12.5.1",
		"eslint": "^7.18.0",
		"eslint-config-prettier": "^7.2.0",
		"eslint-plugin-prettier": "^3.3.1",
		"gen-esm-wrapper": "^1.1.1",
		"husky": "^4.3.8",
		"jest": "^26.6.3",
		"jest-circus": "^26.6.3",
		"lerna": "^3.22.1",
		"lint-staged": "^10.5.3",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.2.1",
		"pretty-quick": "^3.1.0",
		"ts-jest": "^26.4.4",
		"ts-node": "^9.1.1",
		"typedoc": "0.19.2",
		"typedoc-plugin-lerna-packages": "^0.3.1",
		"typedoc-plugin-nojekyll": "^1.0.1",
		"typescript": "^4.1.3"
	},
	"peerDependencies": {},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sapphire-project/plugins.git"
	},
	"engines": {
		"node": ">=12"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "yarn pretty-quick --staged && yarn lint-staged"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"resolutions": {
		"acorn": "^8.0.4",
		"minimist": "^1.2.5",
		"kind-of": "^6.0.3",
		"jest-environment-jsdom": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.1.1.tgz",
		"jest-jasmine2": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.1.1.tgz",
		"dot-prop": "^6.0.1"
	},
	"prettier": "@sapphire/prettier-config"
}
