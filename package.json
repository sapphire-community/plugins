{
	"name": "root",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"clean": "rimraf packages/**/dist",
		"lint": "eslint packages --ext mjs,js,ts --fix",
		"format": "prettier --write packages/**/{src,tests,scripts}/**/*.{mjs,ts,js}",
		"test": "jest",
		"test:watch": "jest --watch",
		"build": "lerna run build --parallel",
		"docs": "typedoc",
		"commit": "git-cz",
		"cz": "git-cz",
		"update": "yarn upgrade-interactive --latest",
		"prepare": "husky install .github/husky"
	},
	"devDependencies": {
		"@commitlint/cli": "^13.1.0",
		"@commitlint/config-conventional": "^13.1.0",
		"@sapphire/eslint-config": "^3.2.3",
		"@sapphire/framework": "next",
		"@sapphire/pieces": "^2.1.0",
		"@sapphire/prettier-config": "^1.1.6",
		"@sapphire/ts-config": "^3.0.0",
		"@sapphire/utilities": "^2.0.1",
		"@types/jest": "^26.0.23",
		"@types/node": "^16.4.3",
		"@types/node-fetch": "^2.5.12",
		"@types/ws": "^7.4.7",
		"@typescript-eslint/eslint-plugin": "^4.28.4",
		"@typescript-eslint/parser": "^4.28.4",
		"cz-conventional-changelog": "^3.3.0",
		"discord-api-types": "^0.20.2",
		"discord.js": "dev",
		"eslint": "^7.31.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.0",
		"gen-esm-wrapper": "^1.1.2",
		"husky": "^7.0.1",
		"jest": "^27.0.6",
		"jest-circus": "^27.0.6",
		"lerna": "^4.0.0",
		"lint-staged": "^11.1.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.3.2",
		"pretty-quick": "^3.1.1",
		"ts-jest": "^27.0.4",
		"ts-node": "^10.1.0",
		"typedoc": "0.19.2",
		"typedoc-plugin-lerna-packages": "^0.3.1",
		"typedoc-plugin-nojekyll": "^1.0.1",
		"typescript": "^4.3.5"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sapphiredev/plugins.git"
	},
	"engines": {
		"node": ">=12"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"resolutions": {
		"acorn": "^8.3.0",
		"minimist": "^1.2.5",
		"kind-of": "^6.0.3",
		"jest-environment-jsdom": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.1.1.tgz",
		"jest-jasmine2": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.1.1.tgz",
		"dot-prop": "^6.0.1",
		"lodash": "^4.17.21",
		"marked": "^2.0.7",
		"merge": "^2.1.1",
		"trim": "^1.0.1",
		"trim-newlines": "^3.0.1"
	},
	"prettier": "@sapphire/prettier-config"
}
