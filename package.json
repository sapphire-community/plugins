{
	"name": "root",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"clean": "rimraf packages/**/dist",
		"lint": "eslint packages --ext mjs,js,ts --fix",
		"format": "prettier --write packages/**/{src,tests,scripts}/**/*.{mjs,ts,js}",
		"test": "jest",
		"test:watch": "jest --watch",
		"build": "lerna run build --parallel",
		"docs": "typedoc",
		"commit": "git-cz",
		"cz": "git-cz",
		"update": "yarn upgrade-interactive --latest",
		"prepare": "husky install .github/husky"
	},
	"devDependencies": {
		"@commitlint/cli": "^13.2.0",
		"@commitlint/config-conventional": "^13.2.0",
		"@favware/npm-deprecate": "^1.0.2",
		"@sapphire/eslint-config": "^3.2.3",
		"@sapphire/framework": "next",
		"@sapphire/pieces": "^3.0.0",
		"@sapphire/prettier-config": "^1.1.6",
		"@sapphire/ts-config": "^3.0.0",
		"@sapphire/utilities": "^2.0.1",
		"@types/jest": "^27.0.2",
		"@types/node": "^16.10.1",
		"@types/node-fetch": "^2.5.12",
		"@types/ws": "^8.2.0",
		"@typescript-eslint/eslint-plugin": "^4.32.0",
		"@typescript-eslint/parser": "^4.32.0",
		"cz-conventional-changelog": "^3.3.0",
		"discord-api-types": "^0.23.1",
		"discord.js": "^13.1.0",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"gen-esm-wrapper": "^1.1.3",
		"husky": "^7.0.2",
		"jest": "^27.2.3",
		"jest-circus": "^27.2.3",
		"lerna": "^4.0.0",
		"lint-staged": "^11.1.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.4.1",
		"pretty-quick": "^3.1.1",
		"ts-jest": "^27.0.5",
		"ts-node": "^10.2.1",
		"typedoc": "0.22.4",
		"typescript": "^4.4.3"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sapphiredev/plugins.git"
	},
	"engines": {
		"node": ">=v14.18.0"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"resolutions": {
		"acorn": "^8.5.0",
		"dot-prop": "^6.0.1",
		"i18next": "^21.1.1",
		"jest-environment-jsdom": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.1.1.tgz",
		"jest-jasmine2": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.1.1.tgz",
		"kind-of": "^6.0.3",
		"lodash": "^4.17.21",
		"marked": "^2.1.3",
		"merge": "^2.1.1",
		"minimist": "^1.2.5",
		"tar": "^6.1.11",
		"trim-newlines": "^3.0.1",
		"trim": "^1.0.1"
	},
	"prettier": "@sapphire/prettier-config"
}
